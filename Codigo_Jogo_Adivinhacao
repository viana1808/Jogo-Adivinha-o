import random

def jogar():
    print('Jogo de adivinhaÃ§Ã£o *.* valendo R$ 1.000.000,00')
    chances = 3

    while chances > 0:
        numero = int(input('Digite um nÃºmero entre 1 e 3: '))
        aleatorio = random.randint(1, 3)

        if numero == aleatorio:
            print('VocÃª ganhou R$ 1.000.000,00! ğŸ‰')
            break
        else:
            chances -= 1
            print('Errou feio!')
            print(f'VocÃª tem {chances} chances restantes.')
    else:
        print('Chances esgotadas! Pague mais R$ 50,00 ğŸ’¸')

if __name__ == "__main__":
    jogar()
